{
  "name": "karavasilev/crypto-manana",
  "description": "CryptoManana is a cryptography framework for boosting your project's security.",
  "type": "library",
  "keywords": [
    "CryptoManana",
    "cryptomanana",
    "crypto-manana",
    "cryptography",
    "security",
    "secure",
    "hashing",
    "digest",
    "encryption",
    "decryption",
    "multibyte",
    "randomness",
    "random-numbers",
    "random-strings",
    "random-generators",
    "hashing-library",
    "encryption-library",
    "php-cryptography-framework",
    "php-framework",
    "php-library",
    "karavasilev"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Tony Karavasilev",
      "homepage": "http://karavasilev.info"
    }
  ],
  "require": {
    "php": "^5.5 || ^7.0",
    "ext-spl": "*",
    "ext-hash": "*",
    "ext-openssl": "*"
  },
  "require-dev": {
    "ext-mbstring": "*",
    "ext-reflection": "*",
    "squizlabs/php_codesniffer": "^3.0",
    "phpunit/phpunit": "^8 || ^7 || ^6.5 || ^5.7 || ^4.8"
  },
  "suggest": {
    "ext-libsodium": "PHP < 7.0.0: Cryptography library loaded as a PHP extensions.",
    "ext-sodium": "PHP >= 7.0.0: Cryptography library used by newest PHP core features.",
    "ext-zend-opcache": "Recommended for high speed execution and memory optimizations.",
    "ext-apcu": "Recommended for Composer autoloading optimization level 2/B and caching.",
    "ext-mbstring": "Use only for multi-byte string encodings support and implementations.",
    "ext-event": "Interface for the libevent library and a port to the PHP infrastructure.",
    "ext-xdebug": "Useful for Web/CLI debugging and profiling, plus needed for Code Coverage."
  },
  "autoload": {
    "psr-4": {
      "CryptoManana\\": "src/CryptoManana/"
    },
    "files": [
      "src/compatibility.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "CryptoManana\\Tests\\": "tests/CryptoManana/Tests/"
    },
    "files": [
      "tests/settings.php"
    ]
  },
  "minimum-stability": "stable",
  "config": {
    "sort-packages": true
  },
  "scripts": {
    "install-dev": "composer install --profile -vv",
    "install-phar": "php composer.phar install --profile -vv",
    "autoload-dev": "composer dump-autoload --profile -vv",
    "autoload-phar": "php composer.phar dump-autoload --profile -vv",
    "execute-tests": "vendor/bin/phpunit --verbose --testdox --no-coverage",
    "execute-tests-phar": "php phpunit.phar --verbose --testdox --no-coverage",
    "scan-coverage": "vendor/bin/phpunit --coverage-text --verbose --stop-on-failure",
    "scan-coverage-phar": "php phpunit.phar --coverage-text --verbose --stop-on-failure",
    "export-coverage": "vendor/bin/phpunit --coverage-html ./coverage/",
    "export-coverage-phar": "php phpunit.phar --coverage-html ./coverage/",
    "check-source-psr": "vendor/bin/phpcs --standard=PSR2 src/ -n -p",
    "check-source-psr-phar": "php phpcs.phar --standard=PSR2 src/ -n -p",
    "check-tests-psr": "vendor/bin/phpcs --ignore=config.php --standard=PSR2 tests/ -n -p",
    "check-tests-psr-phar": "php phpcs.phar --ignore=config.php --standard=PSR2 tests/ -n -p",
    "fix-source-psr": "vendor/bin/phpcbf --standard=PSR2 src/ -n -p",
    "fix-source-psr-phar": "php phpcbf.phar --standard=PSR2 src/ -n -p",
    "fix-tests-psr": "vendor/bin/phpcbf --ignore=config.php --standard=PSR2 tests/ -n -p",
    "fix-tests-psr-phar": "php phpcbf.phar --ignore=config.php --standard=PSR2 tests/ -n -p",
    "check-psr": "vendor/bin/phpcs",
    "check-psr-phar": "php phpcs.phar",
    "fix-psr": "vendor/bin/phpcbf",
    "fix-psr-phar": "php phpcbf.phar",
    "export-docs-phar": "php phpdoc.phar"
  },
  "extra": {
    "branch-alias": {
      "dev-master": "v0.x-dev"
    }
  }
}
